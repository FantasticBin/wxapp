/**app.wxss**/

page {
  /* height: 100%; */
  padding: 0;
  background: #fbf9fe;
  box-sizing: border-box;
}

.container {
  position: fixed;
  /* padding: 0 20rpx; */
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow: auto;
  padding-bottom: 100rpx;
}

.clearfix:after {
  display: block;
  clear: both;
  content: '';
  visibility: none;
  height: 0;
}

.clearfix {
  zoom: 1;
}

.button_shadow {
  box-shadow: 0px 1px 6rpx #d9d9d9;
}

.page_bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.text_ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.full_width {
  flex: 1;
}
