.main_cell {
  position: relative;
  background: #fff;
  border-radius: 10rpx;
  margin: 30rpx;
  padding: 20rpx;
  box-shadow: 0 0 10rpx #ddd;
}

.main_cell_limit {
  background: #5ca780;
  /* box-shadow: 0 0 20rpx #ddd; */
}

.main_cell_limit .title {
  color: #fdfdfd;
}

.main_cell_limit .subtitle {
  color: #efefef;
}

.title {
  color: #333;
}

.subtitle {
  font-size: 25rpx;
  color: #666;
}

.subtitle .subtitle_content {
  padding-right: 40rpx;
}

.subtitle .subtitle_content:last-child {
  padding-right: 0;
  padding-left: 50rpx;
}

.subtitle .subtitle_content.subtitle_content_inner {
  display: inline-block;
  width: 90rpx;
  white-space: nowrap;
}

.money {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 35rpx;
  font-weight: bold;
}

.main_result {
  display: flex;
  align-items: center;
}

.result_money {
  color: #f66;
  font-weight: bold;
}

.section__title {
  padding-right: 50rpx;
  color: #333;
}

.result {
  display: flex;
  align-items: center;
  background: #bfefff;
  box-shadow: 0 0 10rpx #bfefff;
}

.bottom {
  display: block;
  font-size: 12px;
  color: #666;
  padding-right: 55rpx;
  text-align: right;
  /* padding-top: 20rpx; */
}

.canvas {
  position: absolute;
  left: -9999px;
  top: -9999px;
  display: block;
  width: 0px;
  height: 0px;
  overflow: hidden;
}

.ocr_button {
  display: block;
  width: 120rpx;
  height: 120rpx;
  background: #0cf !important;
  color: #fff;
  border-radius: 100%;
  /* box-shadow: 0 0 20rpx #ddd; */
}

.ocr_img {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 70rpx;
  height: 70rpx;
}

movable-area {
  height: 100%;
  width: 100%;
  overflow: auto;
}

.dialog {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #fff;
  opacity: 0;
}

.dialog_content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 270rpx;
  height: 300rpx;
  opacity: 1;
}

.dialog_button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  padding: 0;
  color: #fff;
  border-radius: 100%;
  /* box-shadow: 0 0 20rpx #ddd; */
}
